@model Pagination.Repository.Pager<Pagination.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)&nbsp;
                @Html.DisplayFor(modelItem => item.FirstName)&nbsp;
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.EmployeeID }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" })&nbsp;
                @Html.ActionLink(" ", "Details", new { id = item.EmployeeID }, new { @class = "glyphicon glyphicon-folder-open", @title = "Details" })&nbsp;
                @Html.ActionLink(" ", "Delete", new { id = item.EmployeeID }, new { @class = "glyphicon glyphicon-remove", @title = "Delete" })
            </td>
        </tr>
    }
    <tr>
        <td colspan="5">
            @Html.Partial("_PagingPartial", Model)
        </td>
    </tr>

</table>
