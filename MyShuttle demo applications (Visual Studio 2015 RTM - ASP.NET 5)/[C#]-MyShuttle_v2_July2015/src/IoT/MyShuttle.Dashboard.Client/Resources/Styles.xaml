    <DataTemplate x:Key="MyShuttleHeaderHubDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button  x:Name="backButton" Margin="-1,-1,39,0" Command="{Binding GoBackCommand, ElementName=pageRoot}"
    			Style="{StaticResource MyShuttleNavigationBackButtonNormalStyle}"
    			VerticalAlignment="Center"
    			AutomationProperties.Name="Back"
    			AutomationProperties.AutomationId="BackButton"
    			AutomationProperties.ItemType="Navigation Button"/>
            <Image Grid.Column="1" Source="ms-appx:///Assets/HeaderLogo.png" Width="328" Height="54" HorizontalAlignment="Left" VerticalAlignment="Center"/>
