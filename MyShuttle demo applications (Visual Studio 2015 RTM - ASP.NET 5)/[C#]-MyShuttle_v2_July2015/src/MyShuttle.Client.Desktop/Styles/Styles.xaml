    <Style x:Key="DetailsSectionHeaderStyle" TargetType="Border">
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="11,0"/>
    </Style>

    <Style x:Key="DetailsSectionContentStyle" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="6,6,11,12"/>
